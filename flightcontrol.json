{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main",
        "pr": false,
        "trigger": "push"
      },
      "services": [
        {
          "id": "rails-app-YLXCcw",
          "name": "Rails App",
          "target": {
            "type": "fargate"
          },
          "buildType": "nixpacks",
          "cpu": 1,
          "gpu": 0,
          "memory": 2,
          "ci": {
            "type": "ec2",
            "instanceStorage": 30,
            "storageThroughput": 125,
            "storageIops": 3000,
            "storageType": "gp3"
          },
          "containerInsights": false,
          "minInstances": 1,
          "maxInstances": 1,
          "versionHistoryCount": 10,
          "basePath": ".",
          "installCommand": "bundle install",
          "buildCommand": "bundle exec rake assets:precompile && bundle exec rake db:migrate",
          "privileged": false,
          "envVariables": {},
          "autoscaling": {
            "cpuThreshold": 70,
            "memoryThreshold": 70,
            "cooldownTimerSecs": 300,
            "requestsPerTarget": 500
          },
          "includeEnvVariablesInBuild": true,
          "logging": {
            "ecsLogsMetadataEnabled": false,
            "cloudwatchLogsEnabled": true,
            "envVariables": {}
          },
          "healthCheckPath": "/up",
          "port": 3000,
          "stickySessionsEnabled": false,
          "stickySessionsDurationSecs": 86400,
          "enableCloudfrontSwr": false,
          "type": "web"
        },
        {
          "id": "database-gE8nG8",
          "name": "Database",
          "type": "rds",
          "instanceSize": "db.t4g.micro",
          "private": false,
          "storage": 20,
          "maxStorage": 100,
          "autoUpgradeMinorVersions": true,
          "applyChangesImmediately": false,
          "deletionProtection": false,
          "connectionStringEnvVarName": "DATABASE_URL",
          "backupRetentionPeriodInDays": 35,
          "deleteBackupsWithRdsDeletion": true,
          "performanceInsights": false,
          "storageType": "gp3",
          "multiAvailabilityZones": false,
          "encryptionAtRest": true,
          "engine": "postgres",
          "engineVersion": "15"
        }
      ]
    }
  ]
}